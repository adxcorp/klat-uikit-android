<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_reaction_bg"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:background="@drawable/bg_reaction_un_selected">

    <TextView
        android:id="@+id/tv_reaction_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:gravity="center"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="❤️" />

    <TextView
        android:id="@+id/tv_reaction_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="9dp"
        android:gravity="center"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_reaction_emoji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_reaction_emoji"
        app:layout_constraintTop_toTopOf="@+id/tv_reaction_emoji"
        tools:text="10"
        tools:textColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>